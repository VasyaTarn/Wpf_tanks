<Window x:Class="Wpf_tanks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_tanks"
        mc:Ignorable="d"
        Title="Tanks" Width="650" Height="550">
    <Canvas Name="MyCanvas" Focusable="True" Background="Black" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
        <Rectangle Name="player" Height="50" Width="60" Fill="Yellow" Canvas.Left="270" Canvas.Top="445" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Label Name="scoreText" Content="Score: 0" FontSize="18" FontWeight="Bold" Foreground="White"/>
        <Label Name="damageText" Content="Damage: 0" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Canvas.Left="513" VerticalAlignment="Center"/>
    </Canvas>


</Window>
